<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#93C8A2"
    tools:context=".Expence"
    android:screenOrientation="portrait">
    <TextView
        android:id="@+id/tvChartName"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:clickable="true"
        android:background="#5AB577"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Назад в ЛК"
        android:textColor="#2F503B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="serif"
        android:text=" Выберите категорию"
        android:textAlignment="center"
        android:textColor="#2F503B"
        android:textSize="25sp"
        android:textStyle="bold"

        app:layout_constraintVertical_bias="0.162" />
    <Spinner
        android:id="@+id/catspin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:textColor="#2F503B"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:hint="Введите ваше имя"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите тип операции"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textColor="#2F503B"
        android:textSize="25sp"
        android:textStyle="bold"

        android:layout_gravity="center"/>

    <Spinner
        android:id="@+id/typespin"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="22sp"
        android:textColor="#2F503B"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:hint="Введите ваше имя"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите сумму:"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textColor="#2F503B"
        android:textSize="25sp"
        android:textStyle="bold"

        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/depositEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="12000.50"
        android:maxLength="7"
        android:inputType="number|numberDecimal"
        android:textAlignment="center"
        android:textColor="#2F503B"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/comm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите комментарий:"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textColor="#2F503B"
        android:textSize="25sp"
        android:textStyle="bold"

        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Утренний кофе"
        android:maxLength="30"
        android:textAlignment="center"
        android:textColor="#2F503B"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#5AB577"
        android:fontFamily="serif"
        android:text="Внести"
        android:textColor="#2F503B"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        />

</LinearLayout>